## we use the BLAS and the LAPACK library:
PKG_LIBS += $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)  $(SHLIB_OPENMP_CFLAGS)
PKG_CFLAGS += $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CFLAGS) 
PKG_CPPFLAGS +=  $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CPPFLAGS)

## Specify location of libcholmod.so
ifdef LIBCHOLMOD
  PKG_LIBS += $(LIBCHOLMOD)
  PKG_CPPFLAGS += -D_USE_EXTERNAL_CHOLMOD_LIB_
endif
